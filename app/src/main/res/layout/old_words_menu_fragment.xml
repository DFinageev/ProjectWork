<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="64dp"
    android:paddingTop="32dp"
    android:paddingRight="64dp"
    android:paddingBottom="32dp"
    tools:context=".oldwordsmenu.OldWordsMenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/dictionaryButton"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:text="Словарь"
            app:layout_constraintBottom_toTopOf="@+id/oldWordsButton"
            app:layout_constraintEnd_toEndOf="@+id/oldWordsButton"
            app:layout_constraintStart_toStartOf="@+id/oldWordsButton"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/oldWordsButton"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:text="Написать перевод"
            app:layout_constraintBottom_toTopOf="@+id/quizButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dictionaryButton" />

        <Button
            android:id="@+id/quizButton"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:text="Выбрать перевод"
            app:layout_constraintBottom_toTopOf="@+id/constructButton"
            app:layout_constraintEnd_toEndOf="@+id/oldWordsButton"
            app:layout_constraintStart_toStartOf="@+id/oldWordsButton"
            app:layout_constraintTop_toBottomOf="@+id/oldWordsButton" />

        <Button
            android:id="@+id/constructButton"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:text="Составить слово"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/quizButton"
            app:layout_constraintStart_toStartOf="@+id/quizButton"
            app:layout_constraintTop_toBottomOf="@+id/quizButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>